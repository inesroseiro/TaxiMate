<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bk_meu_perfil"
    tools:context="com.example.soren5.taximate.MeuPerfil">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/NavBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        design:menu="@menu/menu_nav"/>

    <TextView
        android:id="@+id/meu_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="70dp"
        android:text="O MEU PERFIL"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/profilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/meu_perfil"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/name_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"
        android:paddingTop="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/meu_perfil"
        android:text="Nome: TextView" />


    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_surname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:paddingTop="20dp"
        android:text="Data de nascimento: TextView"
        android:textColorLink="?android:attr/colorPressedHighlight" />


</RelativeLayout>